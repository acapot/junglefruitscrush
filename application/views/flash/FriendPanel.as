package{	/**	 * ...	 * @author Alexis	 */	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.display.Sprite;	import flash.display.DisplayObjectContainer;	import flash.events.Event;	import flash.display.Stage;	import flash.display.Loader;	import flash.net.URLRequest;				public class FriendPanel extends Sprite	{		public var FriendPanelText:TextField;		public var format2:TextFormat;		public var posX:int;		public var posY:int;		public var elemWidth:int;		public var elemHeight:int;				//public function GameOver(stage:Stage, px:uint, py:uint, ew:uint, eh:uint, etext:String, textSize:uint, ebgcolor:Number, ecolor:Number )		public function FriendPanel ( px:uint, py:uint, ew:uint, eh:uint)		{						this.x=px;			this.y=py;			posX = px;			posY = py;			elemWidth = ew;			elemHeight = eh;			createRectangle();						//friendText(etext, textSize, ebgcolor, ecolor);								}				public function friendText(etext:String, textSize:uint, ebgcolor:Number, ecolor:Number)		{			trace("hhh");			FriendPanelText= new TextField();			FriendPanelText.x = this.x*-0.3;			trace("FriendPanelText.x: "+FriendPanelText.x);			FriendPanelText.y += 20;			FriendPanelText.width = elemWidth/1.7;			FriendPanelText.height = elemHeight/1.2;			FriendPanelText.wordWrap = true;			FriendPanelText.background = false;			FriendPanelText.backgroundColor = ebgcolor;			FriendPanelText.alpha = 1;			//FORMAT FÅR VARA FÖRST ÄN TEXT FÖR ATT FUNKA			formatText(ecolor,textSize);			FriendPanelText.text = etext;		}				private function formatText(ecolor:Number,textSize:uint):void 		{			format2 = new TextFormat();			format2.font = "Verdana";			format2.color = ecolor;//0x3333AA;			format2.size = textSize;			format2.align = "left";			format2.bold = true;			FriendPanelText.defaultTextFormat = format2;			addChild(FriendPanelText);		}				public function createRectangle(/*px:int, py:int,w:int,h:int,textCol:Number*/)		{			var rect:Sprite = new Sprite;			rect.graphics.beginFill(0xffffff, 1);			rect.graphics.drawRect(-550/2, 0, elemWidth, elemHeight);			rect.x *= 0.9;			rect.y *= 0.9;			rect.graphics.endFill();			addChild(rect);								}				public function addPicture(pic:String)		{			//=============start Loop this to take the picture====================			var loader:Loader = new Loader();			loader.x = -270;			loader.y = 10;			var FBPic:LoadFBPicture = new LoadFBPicture(pic,loader);						//trace("FBPic: "+FBPic.loader);			addChild(FBPic.loader);			//FBPic.getPic();			//=============end Loop this to take the picture====================		}						public function addBtn()		{			var btn:BtnFriend = new BtnFriend(11,12);			btn.x = this.x-140;			btn.y = 33;						addChild(btn);		}									}}