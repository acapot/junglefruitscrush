package  {		import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.display.Sprite;	import flash.display.DisplayObjectContainer;	import flash.events.Event;	import flash.display.Stage;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.external.ExternalInterface;	import flash.events.MouseEvent;			public class MiniPanelFriend extends MovieClip {				public var btn:BtnFriend;		public var typeBtn:String;		public var fid:String;				public function MiniPanelFriend(px:uint, py:uint, ew:uint, eh:uint, tb:String, frndId:String) {			// constructor code			typeBtn = tb;			fid = frndId;			this.x=px;			this.y=py;			this.width = ew;			this.height = eh;						createButton(tb);								}				public function addPicture(pic:String)		{			//=============start Loop this to take the picture====================			var loader:Loader = new Loader();			loader.x = 5;			loader.y = 13;			var FBPic:LoadFBPicture = new LoadFBPicture(pic,loader);						//trace("FBPic: "+FBPic.loader);			addChild(FBPic.loader);			//FBPic.getPic();			//=============end Loop this to take the picture====================		}				public function createButton(typeBtn:String)		{						if(typeBtn == "invite")			{				btn = new BtnFriend(33,34);				addChild(btn);				btn.x=190;				btn.y=60;				btn.addEventListener(MouseEvent.CLICK, invite);			}						if(typeBtn == "help")			{				btn = new BtnFriend(29,30);				addChild(btn);				btn.x=190;				btn.y=60;				btn.addEventListener(MouseEvent.CLICK, help);			}		}				public function invite(event:Event)		{			//ExternalInterface.call("FacebookInviteFriends("+uid+")");			ExternalInterface.call("FacebookInviteOnefriend("+fid+",'Invite you to play Save Amelie')");		}				public function help(event:Event)		{					}	}	}