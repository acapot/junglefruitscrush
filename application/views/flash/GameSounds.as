package  {		import flash.events.Event;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.media.Sound;	import flash.media.SoundChannel;		public class GameSounds {		private static var bgSound:Sound;		private static var localSound:Sound;		private static var applauseSound:Sound;		private static var bangSound:Sound;		private static var soundReq:URLRequest;		private static var effectSounds:Boolean;		private static var playBgSound:Boolean;		private static var channel:SoundChannel;		private static var chBangSound:SoundChannel;		private static var chApplauseSound:SoundChannel;				public function GameSounds() {			// constructor code						//loadSound();		}				public static function loadSound()		{			effectSounds = true;			playBgSound = false;						bgSound = new Sound();			bgSound.addEventListener(Event.COMPLETE, onSoundLoaded);			soundReq = new URLRequest("application/views/flash/sound/think.mp3");			bgSound.load(soundReq);						bangSound = new Sound();			//bangSound.addEventListener(Event.COMPLETE, onSoundLoaded);			soundReq = new URLRequest("application/views/flash/sound/bang.mp3");			bangSound.load(soundReq);			//bangSound.play();						applauseSound = new Sound();			//applauseSound.addEventListener(Event.COMPLETE, onSoundLoaded);			soundReq = new URLRequest("application/views/flash/sound/app.mp3");			applauseSound.load(soundReq);			//applauseSound.play();					}				public static function onSoundLoaded(event:Event):void		{			localSound = event.target as Sound;			channel = localSound.play(0, int.MAX_VALUE);			//localSound.addEventListener(Event.SOUND_COMPLETE, onComplete);		}				public static function switchPlaySound()		{			if(effectSounds)			{				effectSounds = false;			}						else			{				effectSounds = true;			}		}				public static function playSound(sound:String)		{			if(effectSounds)			{				switch (sound){					case "bang":					chBangSound = bangSound.play();										break;										case "applause":					chApplauseSound = applauseSound.play();					break;										case "all":					chApplauseSound = applauseSound.play();					chBangSound = bangSound.play();					break;				}							}						/*if(!effectSounds !chBangSound.stop() && !chApplauseSound.stop())			{				chBangSound.stop();				chApplauseSound.stop();							}*/		}				public static function funcPlayBgSound()		{			if(playBgSound)			{				channel = localSound.play(0, int.MAX_VALUE);				GameSounds.playBgSound = false;			}						else			{				channel.stop();				GameSounds.playBgSound = true;			}		}	}	}