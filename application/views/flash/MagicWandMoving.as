package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Stage;	import flash.events.MouseEvent;	import flash.display.DisplayObjectContainer;		import flash.ui.Mouse;		public class MagicWandMoving extends MovieClip{				private var btnMagicWand2:BtnFriend;		private var fruitsArray:Array;		public function MagicWandMoving(stage:Stage, fa:Array) {			// constructor code			fruitsArray = fa;		}						public function cursorMagicWand(event:Event)		{						//Mouse.hide();			btnMagicWand2 =new BtnFriend(27,28);			//addChild(btnMagicWand2);			//stage.setChildIndex(btnMagicWand2, 1)						btnMagicWand2.addEventListener(Event.ENTER_FRAME,followMouse);			btnMagicWand2.addEventListener(MouseEvent.CLICK,followMouseClick);					} 						public function followMouse(event:Event)		{						Mouse.show();			btnMagicWand2.x=mouseX;			btnMagicWand2.y=mouseY+btnMagicWand2.width/2;		}					public function followMouseClick(event:Event)		{    		trace("FruitsPanel.fruitsArray[g]: "+fruitsArray[g]);			for(var g:Number = 0; g < fruitsArray.length; g++) 			{				if(btnMagicWand2.hitBox.hitTestObject(fruitsArray[g])) 				{										fruitsArray[g].fruitExplotion();					stage.removeChild(btnMagicWand2);					btnMagicWand2.removeEventListener(Event.ENTER_FRAME,followMouse);					btnMagicWand2.removeEventListener(MouseEvent.CLICK,followMouseClick);				}			}		}	}	}