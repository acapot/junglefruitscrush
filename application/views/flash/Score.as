package  {		import flash.display.MovieClip;	import flash.events.Event;		public class Score extends MovieClip {						public function Score() {			// constructor code			score.background=true;			score.backgroundColor=0xFFFFFF;						moves.background=true;			moves.backgroundColor=0xFFFFFF;						yog.background=true;			yog.backgroundColor=0xFFFFFF;						level.background=true;			level.backgroundColor=0xFFFFFF;						addEventListener(Event.ENTER_FRAME, onEnter);		}				public function onEnter(event:Event)		{			score.text = Main.score+"";						moves.text = Main.moves+"";						yog.text = Main.yogFruitsCount+" / "+Main.yogFruits+"";						level.text = Main.levels.getCurrentLevel()+"";					}				public function removeEvents()		{			removeEventListener(Event.ENTER_FRAME, onEnter);			if (parent.contains(this))			{				parent.removeChild(this);							}		}	}	}